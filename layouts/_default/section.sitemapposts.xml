{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {{ range where (where .Site.RegularPages "Type" "in" site.Params.mainSections) "Draft" false }}
  {{- $now := now -}}
  {{- $lastmod := .Lastmod -}}
  {{- $daysSinceModified := div ($now.Sub $lastmod).Hours 24 -}}
  {{- $changefreq := "monthly" -}}
  {{- $priority := 0.6 -}}
  
  {{- if lt $daysSinceModified 7 -}}
    {{- $changefreq = "daily" -}}
    {{- $priority = 1.0 -}}
  {{- else if lt $daysSinceModified 30 -}}
    {{- $changefreq = "weekly" -}}
    {{- $priority = 0.9 -}}
  {{- else if lt $daysSinceModified 90 -}}
    {{- $changefreq = "monthly" -}}
    {{- $priority = 0.8 -}}
  {{- else if lt $daysSinceModified 180 -}}
    {{- $changefreq = "monthly" -}}
    {{- $priority = 0.7 -}}
  {{- else -}}
    {{- $changefreq = "yearly" -}}
    {{- $priority = 0.6 -}}
  {{- end -}}
  <url>
    <loc>{{ .Permalink }}</loc>
    <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" }}</lastmod>
    <changefreq>{{ $changefreq }}</changefreq>
    <priority>{{ $priority }}</priority>
    {{- if .IsTranslated -}}
      {{- range .Translations -}}
    <xhtml:link rel="alternate" hreflang="{{ .Language.Lang }}" href="{{ .Permalink }}" />
      {{- end -}}
    <xhtml:link rel="alternate" hreflang="{{ .Language.Lang }}" href="{{ .Permalink }}" />
    {{- end -}}
  </url>
  {{ end }}
</urlset>
